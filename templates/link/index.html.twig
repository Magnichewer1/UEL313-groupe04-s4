{% extends 'base.html.twig' %}

{% block title %}Liste des liens{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Liens</h1>

        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Tags</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for link in links %}
                <tr>
                    <td>{{ link.id }}</td>
                    <td>
                        <a href="{{ link.url }}" target="_blank" class="text-decoration-none text-primary">
                            {{ link.url }}
                        </a>
                    </td>
                    <td>{{ link.titre }}</td>
                    <td>{{ link.description }}</td>
                    <td>
                        {% if link.tags is not empty %}
                            <span class="badge bg-primary">{{ link.tags }}</span>
                        {% else %}
                            <span class="text-muted">Aucun tag</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_link_show', {'id': link.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_link_edit', {'id': link.id}) }}" class="btn btn-sm btn-warning">Éditer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-end">
            <a href="{{ path('app_link_new') }}" class="btn btn-success">Créer un nouveau lien</a>
        </div>
    </div>
{% endblock %}
