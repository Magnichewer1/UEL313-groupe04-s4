{% extends 'base.html.twig' %}

{% block title %}Link{% endblock %}

{% block body %}
    <h1>Link</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ link.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ link.url }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ link.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ link.description }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ link.tags }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_link_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_link_edit', {'id': link.id}) }}" class="btn btn-warning">Éditer</a>
        {{ include('link/_delete_form.html.twig') }}
    </div>

{% endblock %}
